<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/styleIndex.css" fx:controller="devforge.susuManager.controladores.IndexControlador">
    <top>
        <!-- Barra superior con título -->
        <HBox alignment="CENTER" style="-fx-background-color: #4CAF50; -fx-padding: 10;" >
            <Label style="-fx-font-size: 24px; -fx-text-fill: white;" text="SUSU Manager" />
        </HBox>
    </top>

    <center>
        <!-- Contenido central -->
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <Text style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Bienvenido al Sistema de Gestión de Susu" />
            <Separator />

            <!-- Botones principales -->
            <Button onAction="#openUserManagement" styleClass="menu-button" text="Gestionar Usuarios" />
            <Button onAction="#openSusuManagement" styleClass="menu-button" text="Gestionar Susu" />
            <Button onAction="#openPaymentRegistration" styleClass="menu-button" text="Registrar Pagos" />
            <Button onAction="#openReports" styleClass="menu-button" text="Ver Reportes" />
            <Button onAction="#openAsociarUsuario" styleClass="menu-button" text="Asociar Usuario a Susu" />
        </VBox>
    </center>

    <bottom>
        <!-- Pie de página -->
        <HBox alignment="CENTER" style="-fx-background-color: #333; -fx-padding: 10;">
            <Label style="-fx-text-fill: white;" text="© 2025 SUSU Manager. Todos los derechos reservados." />
        </HBox>
    </bottom>
</BorderPane>
